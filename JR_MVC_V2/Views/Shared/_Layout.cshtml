<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ASP.NET</title>

    <!-- Enlaces a hojas de estilo -->
    @Styles.Render("~/Content/css")

    <!-- Scripts de modernizr -->
    @Scripts.Render("~/bundles/modernizr")

    <!-- Script personalizado -->
    <script src="~/Scripts/app/Asc.js"></script>
</head>
<body class="sb-nav-fixed">

    <!-- Barra de navegación superior -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand ps-3" href="">ASP.NET</a>
    </nav>

    <!-- Estructura principal -->
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <!-- Menú lateral -->
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- Menú principal -->
                        <div class="sb-sidenav-menu-heading">Panel Principal</div>
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <!-- Menú de clientes -->
                        <div class="sb-sidenav-menu-heading">Gestión de Clientes</div>
                        <a class="nav-link" href="@Url.Action("Clientes", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Clientes
                        </a>

                        <!-- Menú de productos -->
                        <div class="sb-sidenav-menu-heading">Gestión de Productos</div>
                        <a class="nav-link" href="@Url.Action("Pedidos", "Pedido")">
                            <div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
                            Pedidos
                        </a>
                        <a class="nav-link" href="@Url.Action("Articulos", "Articulo")">
                            <div class="sb-nav-link-icon"><i class="fas fa-cogs"></i></div>
                            Artículos
                        </a>
                    </div>
                </div>

                <!-- Pie de página del menú lateral -->
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <hr />
                    @RenderBody() <!-- Renderiza el contenido principal -->
                </div>
            </main>

            <!-- Pie de página principal -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Contenedor de contenido adicional -->
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    <!-- Scripts de jQuery, acciones y Bootstrap -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/acciones")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Sección de scripts adicionales -->
    @RenderSection("scripts", required: false)
</body>
</html>
